<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editProfileActivity"
    android:background="@drawable/activities_background">


    <Button
        android:id="@+id/UpdateAccBtn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/btnColor"
        android:text="@string/updateAccount"
        android:textColor="@color/lightTextColor"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idEditedBirthday"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idEditedBirthday"
        app:layout_constraintTop_toBottomOf="@+id/idEditedBirthday"
        app:layout_constraintVertical_bias="0.179"/>

    <Button
        android:id="@+id/CancelUpdateBtn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/btnColor"
        android:text="@android:string/cancel"
        android:textColor="@color/lightTextColor"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/UpdateAccBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UpdateAccBtn"
        app:layout_constraintTop_toBottomOf="@+id/UpdateAccBtn"
        app:layout_constraintVertical_bias="0.315"/>

    <EditText
        android:id="@+id/idEditedUsername"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/username2"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/darkTextColor"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        app:layout_constraintVertical_bias="0.045"/>

    <EditText
        android:id="@+id/idEditedPassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/darkTextColor"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idEditedUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idEditedUsername"
        app:layout_constraintTop_toBottomOf="@+id/idEditedUsername"
        app:layout_constraintVertical_bias="0.022"/>

    <EditText
        android:id="@+id/idEditedBirthday"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/EditedBirthday"
        android:inputType="text"
        android:textColor="@color/darkTextColor"
        android:textColorHint="@color/hintColor"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idEditedEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idEditedEmail"
        app:layout_constraintTop_toBottomOf="@+id/idEditedEmail"
        app:layout_constraintVertical_bias="0.058"/>

    <EditText
        android:id="@+id/idEditedPhone"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="phone"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/darkTextColor"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idEditedPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idEditedPassword"
        app:layout_constraintTop_toBottomOf="@+id/idEditedPassword"
        app:layout_constraintVertical_bias="0.03"/>

    <EditText
        android:id="@+id/idEditedEmail"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/darkTextColor"
        android:textColorHint="@color/hintColor"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idEditedPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idEditedPhone"
        app:layout_constraintTop_toBottomOf="@+id/idEditedPhone"
        app:layout_constraintVertical_bias="0.043"/>

    <TextView
        android:id="@+id/idEditProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="@string/edit_profile_title"
        android:textColor="@color/lightTextColor"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEditProfileTitle"
        app:layout_constraintVertical_bias="0.020">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/idEditedName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/darkTextColor"
                android:textColorHint="@color/hintColor"
                app:layout_constraintBottom_toBottomOf="@+id/storeLogoImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/storeLogoImage"
                app:layout_constraintTop_toTopOf="@+id/storeLogoImage"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/idEditedSurname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/surname"
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/darkTextColor"
                android:textColorHint="@color/hintColor"
                app:layout_constraintBottom_toBottomOf="@+id/storeLogoImage"
                app:layout_constraintEnd_toEndOf="@+id/idEditedName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/idEditedName"
                app:layout_constraintTop_toBottomOf="@+id/idEditedName"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/storeLogoImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_pic"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.147"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.509"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_image"
                android:background="#E8E8E8"
                app:layout_constraintBottom_toBottomOf="@+id/storeLogoImage"
                app:layout_constraintEnd_toEndOf="@+id/storeLogoImage"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/storeLogoImage"
                app:layout_constraintTop_toTopOf="@+id/storeLogoImage"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>